{
  "name": "lab02-servidor-grpc",
  "version": "1.0.0",
  "description": "Sistema de tarefas com gRPC e Protocol Buffers",
  "main": "server.js",
  "scripts": {
    "start": "node lab02-servidor-grpc/server.js",
    "dev": "nodemon lab02-servidor-grpc/server.js",
    "client": "node lab02-servidor-grpc/client.js",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "proto:compile": "grpc_tools_node_protoc --js_out=import_style=commonjs,binary:./generated --grpc_out=grpc_js:./generated --plugin=protoc-gen-grpc=`which grpc_tools_node_protoc_plugin` -I ./protos ./protos/*.proto",
    "benchmark": "lab02-servidor-grpc/benchmark.js"
  },
  "keywords": [
    "grpc",
    "protocol-buffers",
    "sistemas-distribuidos",
    "streaming"
  ],
  "author": "Gabriel Lucas",
  "license": "MIT",
  "dependencies": {
    "@grpc/grpc-js": "^1.13.4",
    "@grpc/proto-loader": "^0.7.15",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "sqlite3": "^5.1.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "axios": "^1.4.0",
    "grpc-tools": "^1.12.4",
    "jest": "^29.0.0",
    "nodemon": "^3.0.0"
  }
}
